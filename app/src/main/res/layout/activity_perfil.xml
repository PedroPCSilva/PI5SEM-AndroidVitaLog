<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="24dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@android:drawable/sym_def_app_icon"
        android:background="@android:color/white"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"/>

    <TextView
        android:id="@+id/txt_perfil_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Carregando..."
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#333333"/>

    <TextView
        android:id="@+id/txt_perfil_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="email@exemplo.com"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="32dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dados Corporais"
                android:textStyle="bold"
                android:textColor="#FF9800"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Peso"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/txt_perfil_peso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- kg"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Altura"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/txt_perfil_altura"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- m"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nascimento"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/txt_perfil_nasc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_editar_perfil"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Editar Meus Dados"
        android:backgroundTint="#2196F3"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_alterar_senha"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Alterar Senha"
        android:backgroundTint="#607D8B"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_sair_app"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Sair da Conta"
        android:backgroundTint="#F44336"
        android:textColor="@android:color/white"/>

</LinearLayout>