<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Botão Voltar -->
    <Button
        android:id="@+id/btn_voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="← Voltar"
        android:layout_gravity="start"
        android:padding="8dp"
        android:layout_marginBottom="12dp"/>

    <!-- Título com nome do grupo -->
    <TextView
        android:id="@+id/txt_nome_grupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp" />

    <!-- Botão para apagar grupo -->
    <Button
        android:id="@+id/btn_apagar_grupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apagar Grupo"
        android:layout_gravity="center"
        android:backgroundTint="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:layout_marginBottom="16dp"/>

    <!-- RecyclerView Alimentos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_alimentos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Botão adicionar alimento -->
    <Button
        android:id="@+id/btn_add_alimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ Adicionar alimento"
        android:padding="16dp" />

</LinearLayout>
